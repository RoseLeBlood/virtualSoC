<UserControl x:Class="vmstudio.Views.EditorView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:vmstudio.Views"
             xmlns:dragablz="http://dragablz.net/winfx/xaml/dragablz"
             xmlns:avalonedit="http://icsharpcode.net/sharpdevelop/avalonedit"
             xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800" Background="#FF444444">

    <UserControl.Resources>
        <Style x:Name="viSocTab" BasedOn="{StaticResource MetroTabItem}" TargetType="{x:Type TabItem}">
            <Setter Property="controls:ControlsHelper.HeaderFontSize" Value="12"/>
        </Style>

    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="84"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="5" />
            <ColumnDefinition Width="200"/>
        </Grid.ColumnDefinitions>

        <avalonedit:TextEditor 
                SyntaxHighlighting="ASM" FontFamily="Consolas"
                FontSize="12pt" Background="#FFECECEC" 
                Foreground="Black" 
                ShowLineNumbers="True" Grid.RowSpan="2"
            Name="txtSource" />

        <TreeView Grid.Column="2" Grid.RowSpan="2"/>

        <StackPanel  Grid.Column="2" Orientation="Vertical" Grid.Row="1" >
            <Button Content="New File" Name="cmdOpenWork" Click="cmdOpenWork_Click" />
            <Button Content="Save File"  x:Name="cmdSaveFile" Click="cmdSaveFile_Click"/>
            <Button Content="Build"  Name="cmdBuild" Click="cmdBuild_Click" />


        </StackPanel>


    </Grid>

</UserControl>
