<controls:MetroWindow xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
        x:Class="vmstudio.Views.CreateOpenWorkspace"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:vmstudio.Views"
        mc:Ignorable="d"
                      ResizeMode="NoResize"
                      
                      BorderThickness="1"
                      ShowInTaskbar="False"
                      WindowStartupLocation="CenterScreen"
                      Title="Open or Create a Workspace"
        Height="287.456" Width="463.066"
                      Closing="MetroWindow_Closing">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="52"/>
        </Grid.RowDefinitions>
        <GroupBox Header="Workspaces" >
            <ListBox Name="lstWorkspaces"/>
        </GroupBox>
        <Button Content="Create" Name="cmdCreate" Click="cmdCreate_Click"
                HorizontalAlignment="Left" Margin="10,15,0,0" Grid.Row="1" VerticalAlignment="Top" Width="75"/>
        <Button Content="Button" Name="cmdOpen" Click="cmdOpen_Click" HorizontalAlignment="Left" Margin="370,15,0,0" Grid.Row="1" VerticalAlignment="Top" Width="75"/>

    </Grid>
</controls:MetroWindow>
